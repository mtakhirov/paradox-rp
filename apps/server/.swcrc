{
  "$schema": "https://json.schemastore.org/swcrc",

  "jsc": {
    "parser": {
      "syntax": "typescript",
      "dynamicImport": true,
      "decorators": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "target": "es2016",
    "loose": true,
    "minify": {
      "compress": {
        "drop_console": true
      },
      "mangle": true
    }
  },
  "module": {
    "resolveFully": true,
    "noInterop": true,
    "type": "commonjs"
  }
}
